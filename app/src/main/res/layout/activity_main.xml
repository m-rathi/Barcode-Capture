<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/button"
            android:gravity="center"
            android:text="CAPTURE BARCODE "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

    </LinearLayout>


    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_background"
        android:text="SEND"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:text="CAPTURE"
        android:textColor="#ffffff"
        android:layout_above="@+id/textView3"
        android:layout_alignStart="@+id/send" />

    <TextView
        android:id="@+id/barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/button"
        android:gravity="center"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/add"
        android:layout_toStartOf="@+id/barcode"
        android:text="Serial No.:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/send"
        android:layout_alignEnd="@+id/linearLayout">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="52dp" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/scrollView" />


    </RelativeLayout>

    <Button
        android:id="@+id/add"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignEnd="@+id/relativeLayout" />


    <TableLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_alignEnd="@+id/add"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/button">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView7"
            android:layout_toStartOf="@+id/spinner2">


            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:text="USER"
                android:paddingTop="30px"
                android:paddingRight="40dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/linearLayout"
                android:layout_below="@+id/linearLayout"
                android:text="Mayuri"
                android:textColor="#000000"/>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:paddingTop="20px"
           android:dividerPadding="20px"
            android:paddingRight="40px"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView7"
            android:layout_toStartOf="@+id/spinner2">

            <TextView
                android:id="@+id/cust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"
                android:text="CUSTOMER"
                android:paddingRight="40dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/custname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView5"
                android:layout_toEndOf="@+id/button"
                android:text="Company"
                android:textColor="#000000"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView7"
            android:layout_toStartOf="@+id/spinner2"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/order1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="USER"
                android:paddingRight="40dp"
                android:textColor="#000000"/>

            <Spinner
                android:id="@+id/order"
                android:layout_weight="7"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_above="@+id/button"
                android:layout_alignStart="@+id/button"
                android:background="@drawable/btn_dropdown"
                android:entries="@array/spinner1"
                android:layout_span="4"/>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView7"
            android:layout_toStartOf="@+id/spinner2"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/process1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/spinner1"
                android:layout_alignParentStart="true"
                android:text="PROCESS"
                android:paddingRight="40dp"
                android:textColor="#000000"
                />


            <Spinner
                android:id="@+id/process"
                android:layout_width="160dp"
                android:layout_weight="7"
                android:layout_height="50dp"
                android:layout_above="@+id/spinner2"
                android:layout_alignStart="@+id/spinner3"
                android:background="@drawable/btn_dropdown_normal"
                android:entries="@array/spinner2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView7"
            android:layout_toStartOf="@+id/spinner2"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/status1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/spinner1"
                android:layout_alignParentStart="true"
                android:text="STATUS"
                android:paddingRight="40dp"
                android:textColor="#000000"/>


            <Spinner
                android:id="@+id/status"
                android:layout_width="160dp"
                android:layout_weight="7"
                android:layout_height="50dp"
                android:layout_above="@+id/spinner1"
                android:layout_alignEnd="@+id/spinner2"
                android:layout_alignStart="@+id/button"
                android:background="@drawable/btn_dropdown"
                android:entries="@array/spinner3"/>

        </TableRow>
    </TableLayout>


</RelativeLayout>
